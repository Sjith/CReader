<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/searchhistory_bookname"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/searchhistory_clear"
        android:maxLines="1"
        android:text="err"
        android:textColor="@drawable/list_text_selector"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/searchhistory_clear"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/searchhistory_bookname"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:src="@drawable/clear" />

</RelativeLayout>