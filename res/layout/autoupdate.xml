<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_only" >

        <TextView
            android:id="@+id/update_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="自动追更"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>
	
    <ImageView
        android:id="@+id/banner_blueline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_title"
        android:scaleType="fitXY"
        android:src="@drawable/banner_blueline" />

    <LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:background="@drawable/news_tab_bg"
	    android:layout_below="@id/banner_blueline"
	    android:id="@+id/ll01" 
	    >
	    <CheckBox
        android:id="@+id/checkall"
        style="@style/MyCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_blueline"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="全选"
        android:textColor="#5c5c5c"
        android:textSize="18sp" />
	    
	</LinearLayout>

    <ListView
        android:id="@+id/autoupdate_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll01"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent"
        android:divider="#f9f9f9"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:smoothScrollbar="true" />

    <RelativeLayout
        android:id="@+id/autoupdate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_banner"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/autoupdate_button_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:background="@drawable/commit_bt_selector2"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/autoupdate_button_cancer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"
            android:background="@drawable/cancel_bt_selector2"
            android:text="取消"
            android:textColor="#929292"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>