<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:text="图书详情"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/dialog_book_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/test"
        android:scaleType="centerInside"
        android:src="@drawable/book_default" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/dialog_book_pic"
        android:background="#00000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#505050"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dialog_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_book_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_book_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_book_readtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="#808080"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_delete"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_bt_selector"
        android:text="删除"
        android:textColor="#5b75ae" />

</RelativeLayout>